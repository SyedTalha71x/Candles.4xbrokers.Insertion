{
    "compilerOptions": {
        "target": "es2017",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "noEmit": true,
        "allowImportingTsExtensions":true
    },
    "exclude": [
        "dist",
    ]
}